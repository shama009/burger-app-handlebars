<h1>Eat-Da-Burger!!</h1>
<h2>Burgers you ordered!!</h2>
<div class="burgers-ordered">
    <ul>
        {{#each burgers}} {{#unless devoured}}
        <li>
            {{burger_name}} &nbsp;&nbsp;
            <button class="devour" data-id="{{id}}" data-devour="true">
                {{#if devoured}}Order Again!!{{else}}Devour!! {{/if}}
            </button>
        </li>
        {{/unless}} {{/each}}
        <!-- work in progress - thinking of appropriate place for delete button for the app- {{#if burgers}}<br><button class="delete-all" data-id="{{this.id}}">DELETE ALL!</button>{{/if}}-->
    </ul>
</div>
<h2>Burgers you ate!!</h2>
<div class="burgers-eaten">
    <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
            {{burger_name}} &nbsp;&nbsp;

            <button class="devour" data-id="{{id}}" data-devour="false">
                {{#if devoured}}Order Again!!{{else}}Devour!! &nbsp;&nbsp;
                <button class="delete-all" data-id="{{this.id}}">DELETE!</button>{{/if}}

            </button>
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<h2>Order a Burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="name">
        <button type="submit" class="submit-button">Submit</button>
    </div>

    
</form>